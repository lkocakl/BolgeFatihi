rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Kullanıcılar koleksiyonu:
    // - Okuma: Giriş yapmış herkes okuyabilir (Liderlik tablosu için gerekli)
    // - Yazma: Sadece kendi dokümanını düzenleyebilir
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Rotalar koleksiyonu:
    // - Okuma: Giriş yapmış herkes okuyabilir
    // - Yazma: Giriş yapmış herkes rota ekleyebilir
    // - Güncelleme: Giriş yapmış herkes (Gasp etme mantığı için gerekli)
    match /routes/{routeId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update: if request.auth != null;
    }
  }
}
