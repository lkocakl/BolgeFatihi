rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // 1. KULLANICILAR
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // 2. ROTALAR
    match /routes/{routeId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow update: if request.auth != null;
    }

    // 3. SOHBETLER (Kritik Düzeltme)
    // Okuma ve yazma için kullanıcının 'participants' listesinde olması yeterlidir.
    match /chats/{chatId} {
      allow read, write: if request.auth != null && resource.data.participants.hasAny([request.auth.uid]);
      // Yeni sohbet oluşturma izni
      allow create: if request.auth != null;
    }
    
    // 4. MESAJLAR
    match /chats/{chatId}/messages/{messageId} {
      allow read, write: if request.auth != null;
    }
    
    // 5. ARKADAŞLIK İSTEKLERİ
    match /friend_requests/{requestId} {
      allow read, write: if request.auth != null;
    }
  }
}