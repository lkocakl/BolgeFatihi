rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Kullanıcılar: Herkes okuyabilir (Liderlik tablosu için), sadece sahibi yazabilir
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Rotalar:
    match /routes/{routeId} {
      allow read: if request.auth != null;
      
      // Sadece kendi userId'si ile oluşturabilir ve gelen verinin userId'si auth.uid ile aynı olmalı
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      
      // Güncelleme: Ya rotanın sahibidir YA DA gasp puanını güncelliyordur (bunu daha da sıkılaştırabiliriz)
      allow update: if request.auth != null; 
    }
  }
}